<h1>Pages#home</h1>
<h2>@<%= @user.username %></h2>
<div class="d-flex">
<% if @user.photo.key.present? %>
  <%= cl_image_tag @user.photo.key, height: 50, width: 50, crop: :fill, style: "object-fit: fill;"%>
<% end %>
  <%= @user.bio %>
</div>
<% @groups.each do |group| %>
  <%= link_to group_path(group) do%>
    <button><%= group.name %></button>
  <% end %>
<% end %>
<h2>My Projects</h2>
<% @user.projects.each do |project| %>
  <%= link_to project_path(project) do %>
    <div class="border mb-3">
      <p><%= project.title %></p>
      <p><%= project.description %></p>
    </div>
  <% end %>
<% end %>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#home-modal">
  <i class="fa-solid fa-circle-plus"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="home-modal" tabindex="-1" aria-labelledby="home-modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="home-modalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <button><%= link_to "Sports groups", groups_path %></button>
        <button><%= link_to "Add a project", new_project_path %></button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%# <button type="button" class="btn btn-primary">Save changes</button> %>
      </div>
    </div>
  </div>
</div>
